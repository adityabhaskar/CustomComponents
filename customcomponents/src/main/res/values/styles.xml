<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CustomComponentsTheme" parent="Theme.MaterialComponents.DayNight"/>
    
    <style name="CustomComponents" />
    
    <style name="CustomComponents.UnderlinedDenseTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/stroke_color_search_box</item>
        <item name="hintTextColor">@color/text_color_hint_search_box</item>
        <item name="hintEnabled">false</item>
    </style>
    
    <style name="CustomComponentsUnderlinedDenseTextInput" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textCursorDrawable">@drawable/cursor_search_pref_input</item>
    </style>
    
    <style name="CustomComponents.TimePreferenceDialogContent" parent="CustomComponentsTheme">
        <item name="colorAccent">@color/accent_time_date_dialog</item>
    </style>
    
    <style name="CustomComponentsTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:backgroundTint">?colorSurface</item>
    </style>
    
    <style name="CustomComponentsTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
</resources>
